@model Expense_Tracker.Models.Settings.ChangePasswordDTO

<div class="container mt-5">
    <h2 class="text-center mb-4" style="color: var(--text-color);">Change Password</h2>
    <form asp-action="SavePassword" method="post" class="p-4 border rounded shadow-sm" style="background-color: var(--background-color-secondary);">
        <div class="form-group mb-3">
            <label asp-for="CurrentPassword" class="form-label" style="color: var(--text-color-secondary);">Current Password</label>
            <input asp-for="CurrentPassword" type="password" class="form-control" style="background-color: var(--background-color); color: var(--text-color);" required />
            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="NewPassword" class="form-label" style="color: var(--text-color-secondary);">New Password</label>
            <input asp-for="NewPassword" type="password" class="form-control" style="background-color: var(--background-color); color: var(--text-color);" required />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="ConfirmPassword" class="form-label" style="color: var(--text-color-secondary);">Confirm New Password</label>
            <input asp-for="ConfirmPassword" type="password" class="form-control" style="background-color: var(--background-color); color: var(--text-color);" required />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <button type="submit" class="btn w-100" style="background-color: var(--button-background-color); color: var(--text-color); border-color: var(--button-border-color);">Save Changes</button>
    </form>
</div>
