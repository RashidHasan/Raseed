@model Expense_Tracker.Models.Settings.ChangeEmailDTO

<div class="container mt-5">
    <h2 class="text-center mb-4" style="color: var(--text-color);">Change Email</h2>
    <form asp-action="SaveEmail" method="post" class="p-4 border rounded shadow-sm" style="background-color: var(--background-color-secondary);">
        <div class="form-group mb-3">
            <label asp-for="NewEmail" class="form-label" style="color: var(--text-color-secondary);">New Email</label>
            <input asp-for="NewEmail" type="email" class="form-control" style="background-color: var(--background-color); color: var(--text-color);" required />
            <span asp-validation-for="NewEmail" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="ConfirmEmail" class="form-label" style="color: var(--text-color-secondary);">Confirm New Email</label>
            <input asp-for="ConfirmEmail" type="email" class="form-control" style="background-color: var(--background-color); color: var(--text-color);" required />
            <span asp-validation-for="ConfirmEmail" class="text-danger"></span>
        </div>
        <button type="submit" class="btn w-100" style="background-color: var(--button-background-color); color: var(--text-color); border-color: var(--button-border-color);">Save Changes</button>
    </form>
</div>
